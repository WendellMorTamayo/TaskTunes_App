<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".Fragments.MediaPlayerFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_backbtn"/>
        <TextView
            android:id="@+id/now_playing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/now_playing"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/urbanist_bold"/>

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_below="@+id/now_playing_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_music"
            android:background="@drawable/image_background_rounded"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/album_cover"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/music_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Blinding Lights"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/music_title"
                android:text="Music Artist"
                android:textColor="@color/white_40_percent_opacity" />



        </RelativeLayout>

    </RelativeLayout>



</FrameLayout>