<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_color">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="118.51851851852dp"
    android:layout_height="118.51851851852dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="250dp"
    android:layout_marginEnd="10dp"
    android:src="@drawable/logo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:contentDescription="@string/logo" />

<TextView
    android:id="@+id/txtTaskTunes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/urbanist_bold"
    android:text="@string/tasktunes"
    android:textAlignment="center"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<TextView
    android:id="@+id/txtTagline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/urbanist_regular"
    android:text="@string/keep_your_task_in_tune"
    android:textAlignment="center"
    android:textColor="#80FFFFFF"
    android:textSize="10sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtTaskTunes"
    tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>